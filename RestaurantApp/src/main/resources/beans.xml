<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
        <!-- Enable annotations for Spring MVC -->
        <mvc:annotation-driven/>
        
        <!--  Search for Spring Beans -->
        <context:component-scan base-package="com.revature"/>
        
        <!-- Set up our front controller -->
        <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        	<!-- View Resolver is basically the front controller -->
        	<property name="prefix">
        		<value>/WEB-INF/pages/</value>
        		<!-- We can put our jsps in our web inf and not allow them to be reached directly -->
        	</property>
       		<property name="suffix">
       			<value>.jsp</value>
       		</property>
        </bean>
</beans>